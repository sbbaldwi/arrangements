{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Accounts API",
    "version": "1.0.0"
  },
  "host": "",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/accounts/": {
      "get": {
        "description": "gets all accounts in database",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Creates a new account with the provided data.",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "Nacho"
                },
                "lastName": {
                  "type": "string",
                  "example": "Libre"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "email@gmail.com"
                },
                "phoneNumber": {
                  "type": "string",
                  "example": "123-456-7890"
                },
                "password": {
                  "type": "string",
                  "example": "Passwerd"
                },
                "birthday": {
                  "type": "string",
                  "example": "01/01/2001"
                },
                "fav_color": {
                  "type": "string",
                  "example": "Orange"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/accounts/{id}": {
      "get": {
        "description": "Retrieves an account by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates an existing account identified by ID with the provided details.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The ID of the account to be updated."
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "John"
                },
                "lastName": {
                  "type": "string",
                  "example": "Doe"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "john.doe@example.com"
                },
                "phoneNumber": {
                  "type": "string",
                  "example": "123-456-7890"
                },
                "password": {
                  "type": "string",
                  "example": "newpassword123"
                },
                "birthday": {
                  "type": "string",
                  "example": "01/01/2001"
                },
                "fav_color": {
                  "type": "string",
                  "example": "Orange"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content - the account was successfully updated."
          },
          "400": {
            "description": "Bad Request - the request was invalid."
          },
          "404": {
            "description": "Not Found - the account with the given ID was not found."
          },
          "500": {
            "description": "Internal Server Error - an error occurred on the server."
          }
        }
      },
      "delete": {
        "description": "Deletes an account by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/arrangements/": {
      "post": {
        "description": "Allows users to upload a new music arrangement for sale, including a mandatory PDF document and an optional MP3 recording.",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "formData",
            "required": true,
            "type": "string",
            "example": "Hunger Games Medley"
          },
          {
            "name": "composer",
            "in": "formData",
            "required": true,
            "type": "string",
            "example": "Bri Christiansen"
          },
          {
            "name": "description",
            "in": "formData",
            "required": true,
            "type": "string",
            "example": "This arrangement includes Everybody Wants to Rule the World, Yellow Flicker Beat, and the Hanging Tree from the Hunger Games movie series."
          },
          {
            "name": "type",
            "in": "formData",
            "required": true,
            "type": "string",
            "enum": [
              "SSAA",
              "SATB",
              "TTBB"
            ],
            "example": "SSAA, SATB, or TTBB"
          },
          {
            "name": "length",
            "in": "formData",
            "required": true,
            "type": "string",
            "example": "4:05"
          },
          {
            "name": "levelOfDifficulty",
            "in": "formData",
            "required": true,
            "type": "integer",
            "enum": [
              1,
              2,
              3,
              4
            ],
            "format": "int32",
            "minimum": 1,
            "maximum": 4,
            "example": "3"
          },
          {
            "name": "price",
            "in": "formData",
            "required": true,
            "type": "number",
            "example": "3.50"
          },
          {
            "name": "minimumCopies",
            "in": "formData",
            "required": true,
            "type": "integer",
            "format": "int32",
            "example": "10"
          },
          {
            "name": "pdfDocument",
            "in": "formData",
            "required": true,
            "type": "file"
          },
          {
            "name": "mp3Recording",
            "in": "formData",
            "required": false,
            "type": "file"
          },
          {
            "name": "coverImage",
            "in": "formdata",
            "required": true,
            "type": "file"
          }
        ],
        "responses": {
          "201": {
            "description": "Created - the arrangement was successfully uploaded."
          },
          "400": {
            "description": "Bad Request - missing or invalid parameters."
          },
          "500": {
            "description": "Internal Server Error - an error occurred on the server."
          }
        }
      }
    }
  }
}